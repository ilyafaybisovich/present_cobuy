<h2>Sign up</h2>

<div class="user_sign_up">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form">
      <div class="field">
        <%= f.label :email, class: 'hide' %><br />
        <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
      </div>

      <div class="field">
        <%= f.label :name, class: 'hide' %><br />
        <%= f.text_field :name, placeholder: 'Name' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'hide' %>
        <!-- <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br /> -->
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'hide' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'button dark-blue' %>
      </div>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
