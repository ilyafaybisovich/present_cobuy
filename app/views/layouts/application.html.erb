<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Giftbox" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Giftbox" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="wrap">
      <header>
        <%= render 'layouts/navigation' %>
      </header>
      <main role="main" class="container">
        <%= render 'layouts/messages' %>
        <section id="content-area" class="homepage">
          <div class="blurb">
            <div class="logo left">

              <%= image_tag 'gift-logo.png' %>
            </div>
            <%= yield %>
          </div>
        </section>
      </main>
    </div>
      <footer>
        <%= render 'layouts/footer' %>
      </footer>
  </body>
</html>
